<div class="row mt-5">
  <div class="col-md-6 mx-auto">
    <div class="card">
      <div class="card-body">
        <h1 class="text-center mb-3">Register</h1>
        {{> message}}
        <form action="/users/register" method="POST" class="needs-validation" novalidate>
          <div class="form-group">
            <label for="userName">Name</label>
            <input type="text" class="form-control" id="userName" name="name" placeholder="Enter Name"
              value="{{ name }}" required>
            <div class="invalid-feedback">
              請輸入姓名
            </div>
          </div>
          <div class="form-group">
            <label for="userEmail">Email</label>
            <input type="email" class="form-control" id="userEmail" name="email" placeholder="Enter Email"
              value="{{ email }}" required>
            <div class="invalid-feedback">
              請輸入電子郵件
            </div>
          </div>
          <div class="form-group">
            <label for="userPassword">Password</label>
            <input type="password" class="form-control" id="userPassword" name="password" placeholder="Enter Password"
              value="{{ password }}" required>
            <div class="invalid-feedback">
              請輸入密碼
            </div>
          </div>
          <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
              placeholder="Confirm Password" value="{{ confirmPassword }}" required>
            <div class="invalid-feedback">
              請再次確認密碼
            </div>
          </div>
          <button class="btn btn-primary btn-block" type="submit">Register</button>
          <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Register</a>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
</div>